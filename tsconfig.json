{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "rootDir": "./generator",
    "outDir": "./build/generator",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@infrastructure": ["./generator/infrastructure"],
      "@infrastructure/*": ["./generator/infrastructure/*"],
      "@features": ["./generator/features"],
      "@features/*": ["./generator/features/*"],
      "@models": ["./generator/models"],
      "@models/*": ["./generator/models/*"],
      "@common": ["./generator/common"],
      "@common/*": ["./generator/common/*"]
    }
  },

  "include": ["./generator"]
}
