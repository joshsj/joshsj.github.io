{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "./build/generator",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@kernel": ["./generator/kernel"],
      "@kernel/*": ["./generator/kernel/*"],
      "@infrastructure": ["./generator/infrastructure"],
      "@infrastructure/*": ["./generator/infrastructure/*"],
      "@core": ["./generator/core"],
      "@core/*": ["./generator/core/*"]
    }
  },

  "include": ["./generator"]
}
