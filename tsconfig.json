{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "build/generator",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@infrastructure": ["./src/infrastructure"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@features": ["./src/features"],
      "@features/*": ["./src/features/*"],
      "@models": ["./src/models"],
      "@models/*": ["./src/models/*"],
      "@common": ["./src/common"],
      "@common/*": ["./src/common/*"]
    }
  },

  "include": ["./src"]
}
