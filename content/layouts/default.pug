mixin css(name)
  link(rel="stylesheet", href=`/styles/${name}.css`)

mixin js(name)
  script(src=`/scripts/${name}.js` async defer)

mixin navLink(title)
  if current.title !== title
    a(href=urlFor(store.findBy("page", title))) #{title}
  else
    span #{title}

