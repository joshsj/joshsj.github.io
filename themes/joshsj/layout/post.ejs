<p>Posted on <%- date(page.date) %></p>

<% if (!page.date.isSame(page.updated)) { %>
  <p class="squish">Updated on <%- date(page.updated) %></p>
<% }%>

<%
const collection = get_collection(page);

if (collection) { %>
  <p class="squish">
    Part of
    <a href="<%- collection_url_for(collection.title) %>"><%- collection.title %></a>
  </p>
<% } %>

<% if (page.tags.length) { %>
  <p class="squish sep">
    <span class="skip">Talks about</span>
    <%- partial("partials/post/tags", { tags: page.tags, mask: false }) %>
  </p>
<% } %>

<% if (!page.published) { %>
  <p class="squish rainbow">Draft</p>
<% } %>

<% 
const toc = utoc(page.content,  {list_number: false});
if (toc) {
%>
<details open>
  <summary>Contents</summary>
  <%- toc %>
</details>
<% } %>

<%- page.content %>