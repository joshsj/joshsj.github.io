<p>Posted on <%- date(page.date) %></p>

<% if (!page.date.isSame(page.updated)) { %>
  <p class="squish">Updated on <%- date(page.updated) %></p>
<% }%>

<% if (page.series) { %>
  <p class="squish">Part of
    <a href="/series/<%- format_url(page.series) %>"><%- page.series %></a>
  </p>
<% } %>

<% if (page.tags.length) { %>
  <p class="squish">
    Talks about <span class="separate"><%- partial("partials/post/tags", { tags: page.tags, mask: false }) %></span></p>
<% } %>

<%- page.content %>